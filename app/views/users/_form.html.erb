<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="block" id="block-login">
      <div class = "container">
        <div class="col-md-4 offset-md-4">
          <h1 style="text-align: center;margin-top: 40%;">Registro</h1>
          <hr class="colorgraph"><br>

          <%= form_tag do %>
              <fieldset>
                <div class="group wat-cf">
                  <div class="field">
                    <%= label_tag :name, 'Usuario:' %>
                    <%= form.text_field :name, id: :user_name,  class: 'form-control' %>
                  </div>

                  <div class="field">
                    <%= form.label :password, 'Contraseña:' %>
                    <%= form.password_field :password, id: :user_password,  class: 'form-control' %>
                  </div>

                  <div class="field">
                    <%= form.label :password_confirmation, 'Confirmar contraseña:' %>
                    <%= form.password_field :password_confirmation, id: :user_password_confirmation,  class: 'form-control' %>
                  </div>

                  <div class="actions">
                    <%= form.submit 'Registrar', :class => 'btn btn-lg btn-primary btn-block' %>
                  </div>
                </div>
              </fieldset>
          <% end %>
          <div class="login-help">
            <a href="/">¿Ya tienes una cuenta? Inicia sesión</a>
          </div>
        </div>
      </div>
    </div>

<% end %>





